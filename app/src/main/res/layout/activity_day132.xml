<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".month1.week3.activity_day_1_3_2">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="每3秒发送一条Notification"
        android:textSize="50dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnService1321"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="start\nService"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnService1322"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="stop\nService"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnService1323"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="bind\nService"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>
        <Button
            android:id="@+id/btnService1324"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="unbind\nService"
            android:layout_marginTop="40dp"
            android:textSize="25dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="startService\n生命周期"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/tvService1321"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:textSize="20dp"
            android:scrollbars="vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bindService\n生命周期"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/tvService1322"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:textSize="20dp"
            android:scrollbars="vertical"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>