<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".month1.week2.activity_day_1_2_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="40dp"
        android:text="Android UI-控件与布局"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/liner121"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/liner121"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:gravity="center"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LinearLayout"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textSize="30sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is TextView"
            android:layout_marginTop="30dp"
            android:textSize="30sp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="this is EditText"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/btn1211"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is Button"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:src="@drawable/bingwallpaper1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:layout_marginTop="30sp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toBottomOf="@+id/liner121">

        <TextView
            android:id="@+id/relative121"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RelativeLayout"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnOnClick1212"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onClick"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/relative121"/>
        <Button
            android:id="@+id/btnOnLongClick1213"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onLongClick"
            android:textSize="30sp"
            android:layout_below="@+id/btnOnClick1212"
            />

        <Button
            android:id="@+id/btnOnTouch1214"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="onTouch"
            android:textSize="30sp"
            android:layout_toRightOf="@+id/btnOnClick1212"
            android:layout_alignTop="@+id/btnOnClick1212"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>